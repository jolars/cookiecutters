\ProvidesPackage{beamerthemejolars}
\RequirePackage{etoolbox}

\usecolortheme{dove}
\usefonttheme{serif}
\usefonttheme{structurebold}

\usepackage{ragged2e}

% list environment spacing
\makeatletter
\def\@listi{\leftmargin\leftmarginii
\topsep 2ex % Spacing before lists
\parsep 20\p@ \@plus\p@
\itemsep 0pt} % Spacing between items
\makeatother

% remove navigation symbols
\beamertemplatenavigationsymbolsempty

% fonts
\setbeamerfont{title}{size = \VeryHuge, series = \bfseries, family = \sffamily}
\setbeamerfont{author}{size = \LARGE, series = \mdseries, family = \rmfamily}
\setbeamerfont{institute}{size = \large, series = \mdseries, shape = \itshape, family = \rmfamily}
\setbeamerfont{date}{size = \large, series = \bfseries, family = \rmfamily}
\setbeamerfont{section in head/foot}{series=\bfseries}
\setbeamerfont{block title}{size = \huge, series = \bfseries, family = \sffamily}
\setbeamerfont{block alerted title}{size = \huge, series = \bfseries, family = \sffamily}
\setbeamerfont{caption name}{family = \sffamily}

% colors
\setbeamercolor{block alerted body}{fg = black} % Colors of the body of highlighted blocks

% template modifications
\setbeamertemplate{items}[circle]
\setbeamertemplate{caption}[numbered]
\setbeamertemplate{bibliography item}{\insertbiblabel}
\addtobeamertemplate{block alerted begin}{}{\justifying}
\addtobeamertemplate{block begin}{}
  {\vspace{2ex plus 0.5ex minus 0.5ex}\justifying
}
\addtobeamertemplate{block end}{}{\vspace{2ex}}
\addtobeamertemplate{block alerted end}{}{\vspace{2ex}}

% sizes
\setbeamersize{
  text margin left = 0pt,
  text margin right = 0pt
}

% increase figure margins
\AtBeginEnvironment{figure}{\vspace{2.5ex}}
\AtEndEnvironment{figure}{\vspace{0ex}}

% margins and whitespace
\setlength{\belowcaptionskip}{0ex}
